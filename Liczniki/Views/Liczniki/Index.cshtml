@model IEnumerable<Liczniki.Licznik>

@{
    ViewBag.Title = "Rejestr Liczników";
}

<h2>Rejestr Liczników</h2>

<p>
    @Html.ActionLink("Dodaj nowy licznik", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NrLicznika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StanPoczatkowy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NrLicznika)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StanPoczatkowy)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Pokaż", "Details", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
